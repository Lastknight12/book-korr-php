{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        { 
            "src": "/(css|js)/(.*)$", 
            "dest": "/api/assets.php?type=$1&file=$2"
        },
        {
            "src": "/images/(.*)$",
            "dest": "/api/assets.php?type=images&file=$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
